{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["../src/components/*"],
      "@services/*": ["../src/services/*"],
      "@styles/*": ["../src/styles/*"],
      "@config/*": ["../src/config/*"],
      "@types/*": ["../src/types/*"],
      "@pages/*": ["../src/pages/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "node_modules/expo/node_modules"]
}
